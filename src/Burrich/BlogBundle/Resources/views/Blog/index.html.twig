{% extends "BurrichBlogBundle::layout.html.twig" %}

{% block posts %}
  {% for post in posts %}
    <div class="blog-post">
      <h2 class="blog-post-title">
        <a href="{{ path('blog_post', {'slug': post.slug}) }}" title="{{ post.title }}">{{ post.title }}</a>
      </h2>
      <p class="blog-post-meta">Le {{ post.publishedDate|localizeddate('long', 'none') }}, par <a href="">{{ post.author.username }}</a></p>
      
      {{ post.content }}

      {% if post.comments is not empty %}
        <div class="blog-post-comments"><a href="{{ path('blog_post', {'slug': post.slug}) }}#comments">{{ post.comments|length }} commentaire(s)</a></div>
      {% else %}
        <div class="blog-post-comments"><a href="{{ path('blog_post', {'slug': post.slug}) }}#comments">Commenter</a></div>
      {% endif %}
    </div><!-- /.blog-post -->
  {% endfor %}

  <nav>
    <ul class="pagination">
      {# <li><a href="#"><span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></a></li> #}

      {% for page in range(1, nbPages) %}
      <li{% if page == currentPage %} class="active"{% endif %}>
        <a href="{{ path('blog_index', {'page': page}) }}">{{ page }}</a>
      </li>
      {% endfor %}

      {# <li><a href="#"><span aria-hidden="true">&raquo;</span><span class="sr-only">Next</span></a></li> #}
    </ul>
  </nav>
{% endblock %}
