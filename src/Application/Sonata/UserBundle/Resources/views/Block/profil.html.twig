{% extends sonata_block.templates.block_base %}

{% block block %}
	<div class="panel panel-primary" id="profil-panel">
    <div class="panel-heading">
      <h3 class="panel-title">Informations personnelles</h3>
    </div>

    <div class="panel-body">
			<ul id="profil-list">
				{% if app.user.gender %}
					<li><div class="profil-list-left">Sexe :</div><div class="profil-list-right">{{ app.user.gender == "m" ? "Homme" : "Femme" }}</div></li>
				{% endif %}

				{% if app.user.lastname %}
					<li><div class="profil-list-left">Nom :</div><div class="profil-list-right">{{ app.user.lastname }}</div></li>
				{% endif %}

				{% if app.user.firstname %}
					<li><div class="profil-list-left">Pr√©nom :</div><div class="profil-list-right">{{ app.user.firstname }}</div></li>
				{% endif %}
				
				{% if app.user.dateOfBirth %}
					<li><div class="profil-list-left">Date de naissance :</div><div class="profil-list-right">Le {{ app.user.dateOfBirth|localizeddate('long', 'none') }}</div></li>
				{% endif %}

				<li><div class="profil-list-left">Date d'inscription :</div><div class="profil-list-right">Le {{ app.user.createdAt|localizeddate('long', 'none') }}</div></li>
			</ul>
		</div>
	</div>

  <a href="{{ path('sonata_user_profile_edit') }}" title="Editer mon profil"> 
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editer mon profil
  </a><br>

  <a href="{{ path('sonata_user_profile_edit_authentication') }}" title="Editer mon profil"> 
    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Informations de connexion
  </a>
{% endblock %}