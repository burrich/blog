{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_content %}
    <div class="row">
        <div class="span6 col-lg-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'title_user_edit_authentication'|trans({}, 'SonataUserBundle') }}</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ path('sonata_user_profile_edit_authentication') }}" method="POST">
                        {{ form_widget(form) }}

                        <button type="submit" name="submit" class="btn btn-primary pull-right">{{ 'sonata_user_submit'|trans({}, 'SonataUserBundle') }}</button>
                    </form>
                </div>
            </div>
        </div>
 
        {{ render(url('sonata_user_change_password', {'page': 'preferences'})) }}
    </div>
{% endblock %}
